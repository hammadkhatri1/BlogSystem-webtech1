
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div>
    <form action="\Home\Login"  method="post">
        <table class="table">
            <tr>
                <td>Username: </td>
                <td><input type="text" name="username" /></td>
            </tr>
            <tr>
                <td>Password: </td>
                <td><input type="password" name="password" /></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="submit"/></td>
            </tr>
            <p>@ViewBag.ErrorMessage</p>
        </table>
    </form>
</div> 